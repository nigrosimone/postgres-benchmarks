    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run benchmark",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "--expose-gc",
                "--allow-natives-syntax"
            ],
            "args": [
                "--iterations=50000"
            ],
            "program": "${workspaceFolder}\\index.ts"
        }
    ]
}